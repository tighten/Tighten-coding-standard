{
    "name": "tightenco/tighten-coding-standard",
    "description": "A PHP Code_Sniffer configuration for the Tighten coding standard.",
    "type" : "phpcodesniffer-standard",
    "keywords": [
        "tightenco",
        "tighten-coding-standard",
        "php"
    ],
    "homepage": "https://github.com/tighten/tighten-coding-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Stauffer",
            "email": "matt@tighten.co",
            "homepage": "https://tighten.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "friendsofphp/php-cs-fixer": "^3.9",
        "squizlabs/php_codesniffer": "^3.7",
        "symplify/easy-coding-standard": "^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "tightenco/tlint": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Tighten\\CodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tighten\\CodingStandard\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
